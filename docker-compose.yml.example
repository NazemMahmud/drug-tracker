version: "3"
services:
  nginx:
    image: nginx:1.20
    container_name: DRUG_TRACKER_Nginx
    restart: unless-stopped
    tty: true
    ports:
      - ${APP_PORT}:80
      - "443:443"
    volumes:
      - ./:/var/www/project
      - ./docker-conf/nginx/nginx.conf:/etc/nginx/conf.d/default.conf
    depends_on:
      - php
      - db-sql
      - phpmyadmin
      - redis
    networks:
      - drug_tracker_docker

  php:
    container_name: DRUG_TRACKER_PHP
    build:
      context: ./docker-conf/php
    ports:
      - "9002:9000"
    volumes:
      - ./:/var/www/project
      - ./docker-conf/php/www.conf:/usr/local/etc/php-fpm.d/www.conf:rw
      - ./docker-conf/php/php.ini:/usr/local/etc/php/php.ini:rw
    # needed in linux to solve storage log permission denied problem
    # user: "1000:1000"
    logging:
      driver: "json-file"
      options:
        max-size: "200k"
        max-file: "3"
    extra_hosts:
      - "host.docker.internal:172.17.0.1"
    depends_on:
      - db-sql
      - redis
    networks:
      - drug_tracker_docker

  db-sql: # for mysql; must use the service name in env as DB_HOST
    image: mysql:latest
    container_name: DRUG_TRACKER_MYSQL
    restart: unless-stopped
    tty: true
    environment:
      MYSQL_ROOT_PASSWORD: ${DB_PASSWORD} # it must be provided
      MYSQL_DATABASE: ${DB_DATABASE}
    ports:
      - "4036:${DB_PORT}"
    volumes:
      - dbdata:/var/lib/mysql/
      - ./docker-conf/mysql/my.cnf:/etc/mysql/my.cnf
    networks:
      - drug_tracker_docker

  phpmyadmin:
    image: phpmyadmin/phpmyadmin
    container_name: DRUG_TRACKER_MYADMIN
    restart: always
    environment:
      PMA_HOST: db-sql
      PMA_USER: ${DB_USERNAME}
      PMA_PASSWORD: ${DB_PASSWORD}
    ports:
      - "8189:80"
    networks:
      - drug_tracker_docker

  redis:
    image: 'redis:alpine'
    container_name: DRUG_TRACKER_REDIS
    ports:
      - '${REDIS_PORT:-6379}:6379'
    volumes:
      - ${REDIS_PATH}:/data
    networks:
      - drug_tracker_docker
    healthcheck:
      test: [ "CMD", "redis-cli", "ping" ]
      retries: 3
      timeout: 5s


networks:
  drug_tracker_docker:
    driver: "bridge"

volumes:
  dbdata:
    driver: local
